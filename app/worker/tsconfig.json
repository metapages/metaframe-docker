{
    "extends": "../shared/tsconfig-base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": [ "./node_modules/@types", "./src/types"],
    },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    // https://github.com/microsoft/TypeScript/issues/14538#issuecomment-654933955
    "dist"
  ]
}
